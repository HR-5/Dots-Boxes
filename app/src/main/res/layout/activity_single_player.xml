<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/si"
    android:background="@drawable/back"
    tools:context=".SinglePlayer">

    <TextView
        android:id="@+id/dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="56dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Dots"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="35sp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.424" />

    <Button
        android:id="@+id/reset2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/round"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:onClick="reset"
        android:text="RESET"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hard" />

    <ImageButton
        android:id="@+id/home"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="37dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@null"
        android:onClick="home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/buildings" />

    <TextView
        android:id="@+id/and"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&amp;"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="italic|bold"
        android:textColor="@color/red"
        android:textSize="35sp"
        app:layout_constraintStart_toEndOf="@+id/dots"
        app:layout_constraintTop_toTopOf="@+id/dots" />

    <TextView
        android:id="@+id/boxes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boxes"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="italic|bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="@+id/dots"
        app:layout_constraintTop_toBottomOf="@+id/dots" />

    <Button
        android:id="@+id/medium"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="medium"
        android:onClick="medium"
        android:background="@drawable/round2"
        android:textSize="15sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="#EADBDB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/easy"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="easy"
        android:onClick="easy"
        android:textSize="15sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="#EADBDB"
        android:background="@drawable/round2"
        app:layout_constraintBottom_toTopOf="@+id/medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/hard"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="hard"
        android:onClick="hard"
        android:textSize="15sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="#EADBDB"
        android:background="@drawable/round2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medium" />


</androidx.constraintlayout.widget.ConstraintLayout>